.row
  .span6.offset3
    .hero-unit
      %h2 Apply here
      = simple_form_for resource, url: brogrammer_registration_path do |f|
        %fieldset
          %legend You think you have what it takes?
          = f.error_notification
          = f.input :handle, :autofocus => true
          = f.input :email
          = f.input :password
          = f.button :submit, "Do work, son.", class: 'btn-primary btn-large'
